<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/appPrimaryGreenColor"/>
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:left="16dp">
        <layer-list>
            <item android:width="40dp" android:height="40dp"  android:gravity="center" android:drawable="@drawable/ic_arrow_drop_up_white_50dp">
            </item>
            <item android:width="20dp" android:height="5dp" android:bottom="21dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/appPrimaryGreenColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>