<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.AccountFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/profile_image"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user_avatar"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTxt"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin32dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/appSecondaryBlackColor"
        android:textSize="@dimen/txtMedFontSize"
        android:text="Dummy User"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/email_image"
        app:layout_constraintTop_toBottomOf="@+id/usernameTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin32dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:src="@drawable/ic_email_black_100"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTxt"
        app:layout_constraintTop_toTopOf="@+id/email_image"
        app:layout_constraintBottom_toBottomOf="@+id/email_image"
        app:layout_constraintLeft_toRightOf="@+id/email_image"
        android:layout_marginStart="@dimen/margin16dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/appSecondaryBlackColor"
        android:textSize="@dimen/txtSemiMedFontSize"
        android:text="dummeruser@email.com"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/separator"
        android:background="@color/appSecondaryGreyColor"
        app:layout_constraintTop_toBottomOf="@id/email_image"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginStart="@dimen/margin32dp"
        android:layout_marginEnd="@dimen/margin32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutTxt"
        android:text="@string/aboutTxt"
        android:textSize="@dimen/txtMedFontSize"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/appSecondaryBlackColor"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginStart="@dimen/margin32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutTxt"
        android:text="@string/logoutTxt"
        android:textSize="@dimen/txtMedFontSize"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/appSecondaryBlackColor"
        app:layout_constraintTop_toBottomOf="@+id/aboutTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginStart="@dimen/margin32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameYearTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/appNameYearTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appVersionTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/appVersionTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>