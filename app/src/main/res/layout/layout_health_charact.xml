<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="2dp"
    android:layout_margin="8dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/layout_health_charact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtMedFontSize"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:text="Heath"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/vaccinated_img"
                android:src="@drawable/ic_syringe_100"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vaccinated_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:text="Vaccinated"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/spayed_img"
                android:src="@drawable/ic_bandage_64"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spayed_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:text="Spayed and Neutered"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/declaw_img"
                android:src="@drawable/ic_claw_100"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/declaw_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:text="Declawed"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/specialneeds_img"
                android:src="@drawable/ic_note_52"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specialneeds_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:text="Special Needs"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>