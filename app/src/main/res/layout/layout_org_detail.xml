<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="2dp"
    android:layout_margin="8dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/layout_org_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin8dp"
        android:orientation="vertical">
        
        <com.sbhandare.pawdopt.Component.PawDoptImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/org_photo"
            android:src="@drawable/dummy_org"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/org_name_txt"
            android:textSize="@dimen/txtMedFontSize"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/appSecondaryBlackColor"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/address_img"
                android:src="@drawable/ic_marker_black_96"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/email_img"
                android:src="@drawable/ic_email_open_100"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin8dp"
                android:autoLink="email"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/phone_img"
                android:src="@drawable/ic_phone_96"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_txt"
                android:textSize="@dimen/txtSemiMedFontSize"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/appSecondaryGreyColor"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/weblink_iv"
                android:padding="4dp"
                android:src="@drawable/ic_link_100"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/fb_iv"
                android:src="@drawable/ic_facebook_240"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/twitter_iv"
                android:src="@drawable/ic_twitter_240"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/insta_iv"
                android:src="@drawable/ic_instagram_240"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/youtube_iv"
                android:src="@drawable/ic_youtube_240"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>